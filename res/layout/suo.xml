<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tu1" >

    <ImageView
        android:id="@+id/image_m_1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/image_m_2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/image_m_1"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/image_m_3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/image_m_2"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/image_m_4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/image_m_3"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/button_mi_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_m_4"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/button_mi_2"
        android:background="@drawable/button_chang"
        android:text="1" />

    <Button
        android:id="@+id/button_mi_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_m_4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_chang"
        android:text="2" />

    <Button
        android:id="@+id/button_mi_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_m_4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/button_mi_2"
        android:background="@drawable/button_chang"
        android:text="3" />

    <Button
        android:id="@+id/button_mi_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mi_1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/button_mi_2"
        android:background="@drawable/button_chang"
        android:text="4" />

    <Button
        android:id="@+id/button_mi_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mi_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/button_mi_4"
        android:background="@drawable/button_chang"
        android:text="5" />

    <Button
        android:id="@+id/button_mi_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mi_1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/button_mi_5"
        android:background="@drawable/button_chang"
        android:text="6" />

    <Button
        android:id="@+id/button_mi_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mi_4"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/button_mi_8"
        android:background="@drawable/button_chang"
        android:text="7" />

    <Button
        android:id="@+id/button_mi_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mi_4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_chang"
        android:text="8" />

    <Button
        android:id="@+id/button_mi_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mi_4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/button_mi_8"
        android:background="@drawable/button_chang"
        android:text="9" />

    <Button
        android:id="@+id/button_mi_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_mi_7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_chang"
        android:text="0" />

    <LinearLayout
        android:id="@+id/linear_mi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_mi_wangji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="忘记密码?" />

        <TextView
            android:id="@+id/text_mi_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除" />
    </LinearLayout>

</RelativeLayout>